# ==============================================
# RecFlix Environment Configuration
# ==============================================
# Copy this file to backend/.env and fill in your values
# DO NOT commit .env files to version control!

# ----------------------------------------------
# Database Configuration
# ----------------------------------------------
POSTGRES_USER=recflix
POSTGRES_PASSWORD=your-db-password-here
POSTGRES_DB=recflix
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# SQLAlchemy Database URL
DATABASE_URL=postgresql://recflix:your-db-password-here@localhost:5432/recflix

# ----------------------------------------------
# Redis Configuration
# ----------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password-here
REDIS_URL=redis://:your-redis-password-here@localhost:6379/0

# ----------------------------------------------
# pgAdmin Configuration (optional)
# ----------------------------------------------
PGADMIN_EMAIL=your-email@example.com
PGADMIN_PASSWORD=your-pgadmin-password-here

# ----------------------------------------------
# JWT Authentication
# ----------------------------------------------
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ----------------------------------------------
# External APIs
# ----------------------------------------------
# OpenWeatherMap API (https://openweathermap.org/api)
WEATHER_API_KEY=your-openweathermap-api-key-here

# Anthropic API (https://console.anthropic.com/)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ----------------------------------------------
# Application Settings
# ----------------------------------------------
APP_NAME=RecFlix
APP_ENV=development
DEBUG=true
LOG_LEVEL=DEBUG

# Backend
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_TMDB_IMAGE_BASE_URL=https://image.tmdb.org/t/p

# ----------------------------------------------
# Data Paths
# ----------------------------------------------
DATA_RAW_PATH=./data/raw
DATA_PROCESSED_PATH=./data/processed
