# ==============================================
# RecFlix Backend Environment Variables
# ==============================================
# Copy this file to .env and fill in the values

# Database (PostgreSQL)
DATABASE_URL=postgresql://recflix:recflix123@localhost:5432/recflix

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=recflix123

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# External APIs
WEATHER_API_KEY=your-openweathermap-api-key

# CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://recflix.vercel.app

# Environment
ENVIRONMENT=development

# ==============================================
# Production Settings (Railway)
# ==============================================
# These are typically set via Railway dashboard:
# - DATABASE_URL (auto-provisioned by Railway PostgreSQL)
# - REDIS_URL (auto-provisioned by Railway Redis)
# - PORT (auto-set by Railway)
